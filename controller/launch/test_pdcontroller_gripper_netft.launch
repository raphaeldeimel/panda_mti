<?xml version="1.0" ?>

<launch>
  <arg name="for_real" default="true"/>
  <arg name="load_netft" default="true"/>
  <arg name="load_gripper" default="true" />
  <arg name="robot_ip" default="robot.franka.de" />
  <arg name="publish_rate" default="30" />
  

  
  
  <param unless="$(arg load_gripper)" name="robot_description" command="$(find xacro)/xacro $(find franka_description)/robots/panda_arm.urdf.xacro"/>
  <param if="$(arg load_gripper)" name="robot_description" command="$(find xacro)/xacro $(find franka_description)/robots/panda_arm_hand.urdf.xacro" />


  <node     if="$(arg for_real)"   name="pdcontroller_gripper_netft" pkg="controller_panda_mti"   launch-prefix="chrt -f 40"  type="pdcontroller_gripper_netft" required="true"  output="screen" >
    <param  name="panda_address" value="panda"/>  
    <param  name="netft_address" value="192.168.11.3"/>  
    <param  name="withNetft" value='true' />
    <param  name="withGripper" value='true' />
  </node>
  
  
  <node unless="$(arg for_real)" name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <param if="$(arg load_gripper)" name="robot_description" command="$(find xacro)/xacro '$(find franka_description)/robots/panda_arm_hand.urdf.xacro'" />
    <param unless="$(arg load_gripper)" name="robot_description" command="$(find xacro)/xacro '$(find franka_description)/robots/panda_arm.urdf.xacro'" />
    <param  if="$(arg load_gripper)" name="publish_default_positions" value="true" />
  </node>

</launch>
